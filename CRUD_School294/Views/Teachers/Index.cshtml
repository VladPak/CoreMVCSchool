@model IEnumerable<CRUD_School294.Models.Teachers>

@{
    ViewData["Title"] = "All Teachers"; 
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-2">
            <h2 class="text-dark">Teachers</h2>
        </div>
        <div class="col-10 text-right">
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        Search by Name & Surname (case sensitive): <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                        <input type="submit" value="Search" class="btn btn-primary" /> &nbsp;&nbsp;
                        <a asp-action="Index" class="btn btn-warning">Refresh list</a>
                        <a class="btn btn-success" asp-controller="Teachers" asp-action="Create">Add Teacher</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
    </br>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Surname
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Date of Birth
                    </th>
                    <th>
                        Contacts
                    </th>
                    <th>
                        Contacts 2
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="14%">@item.teacherSurname</td>
                    <td width="14%">@item.teacherName</td>
                    <td width="14%">@item.teacherDob.ToShortDateString()</td>
                    <td width="14%">@item.teacherContacts</td>
                    <td width="14%">@item.studentContact2</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Teachers" asp-action="Edit" asp-route-id="@item.teacherId" class="btn btn-warning mx-1">Update</a>
                            <a onclick="return confirm('Are you sure you want to delete a teacher?');" asp-controller="Teachers" asp-action="Delete" asp-route-id="@item.teacherId" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items to show</p>
    }

</div>